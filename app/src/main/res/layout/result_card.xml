<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_expense_approval"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_view_expense_rcv_avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"
            android:src="@drawable/completed"
            app:riv_corner_radius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jayneel"
            android:id="@+id/result_title"
            android:layout_toEndOf="@+id/image_view_expense_rcv_avatar"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021DSCO002"
            android:id="@+id/result_timestamp"
            android:layout_toRightOf="@+id/image_view_expense_rcv_avatar"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins"
            android:layout_below="@id/result_title"
            android:textColor="@color/black"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 2000"
            android:layout_below="@id/result_timestamp"
            android:layout_marginLeft="15dp"
            android:id="@+id/result_score"
            android:layout_toEndOf="@+id/image_view_expense_rcv_avatar"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_below="@id/result_score">

        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>