<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".McqTestActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question "
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:id="@+id/question_lbl"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:id="@+id/question_count_txt"
            android:layout_toEndOf="@id/question_lbl"
            android:textColor="@color/black"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/timer"
            android:src="@drawable/timer"
            app:tint="@color/primary_blue"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:30"
            android:id="@+id/timer"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>
<!--    <com.google.android.material.progressindicator.LinearProgressIndicator-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginVertical="8dp"-->
<!--        android:progress="50"-->
<!--        app:indicatorColor="@color/orange"-->
<!--        android:id="@+id/progress_indicator"/>-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/bg_color"
            android:gravity="center"
            android:id="@+id/question_txt"
            android:text="gdshfigahdfgsdhfgsdhfgsdhfasdfgaskfgasdfgd sdfhgsdhfg dfgsdagf gdsayfgadsh"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/ans_A"
            android:onClick="optionSelection"
            android:fontFamily="@font/poppins"
            android:paddingVertical="12dp"
            android:layout_marginVertical="4dp"
            android:text="Option A"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/ans_B"
            android:onClick="optionSelection"
            android:fontFamily="@font/poppins"
            android:paddingVertical="12dp"
            android:layout_marginVertical="4dp"
            android:text="Option B"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/ans_C"
            android:onClick="optionSelection"
            android:paddingVertical="12dp"
            android:fontFamily="@font/poppins"
            android:layout_marginVertical="4dp"
            android:text="Option C"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/ans_D"
            android:onClick="optionSelection"
            android:fontFamily="@font/poppins"
            android:paddingVertical="12dp"
            android:layout_marginVertical="4dp"
            android:text="Option D"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/next_btn"
            android:fontFamily="@font/poppins"
            android:layout_gravity="end"
            android:onClick="optionSelection"
            android:paddingVertical="12dp"
            android:layout_marginVertical="4dp"
            android:text="Submit"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>